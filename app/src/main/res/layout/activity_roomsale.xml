<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:background="#80cfff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:text="방 정보를 입력해주세요"
        android:fontFamily="@font/gyeonggi"
        android:textSize="30dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f0e1f7">

        <TableRow android:padding="2dp"
            android:layout_margin="20dp"
            >
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:fontFamily="@font/gyeonggimed"
                android:text="방 이름"
                android:textSize="18dp" />
            <ImageView
                android:id="@+id/house"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/house" />
            <EditText
                android:id="@+id/name"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/gyeonggilight"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="2dp"
            android:layout_margin="20dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:fontFamily="@font/gyeonggimed"
                android:text="방 위치"
                android:textSize="18dp" />
            <ImageView
                android:id="@+id/loc"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/location" />
            <EditText
                android:id="@+id/location"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/gyeonggilight"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="2dp"
            android:layout_margin="20dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:fontFamily="@font/gyeonggimed"
                android:text="방 설명"
                android:textSize="18dp" />
            <ImageView
                android:id="@+id/desc"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/desc" />
            <EditText
                android:id="@+id/description"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/gyeonggilight"
                android:padding="3dp" />
        </TableRow>

        <TableRow android:padding="2dp"
            android:layout_margin="20dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:fontFamily="@font/gyeonggimed"
                android:text="연락처"
                android:textSize="18dp" />
            <ImageView
                android:id="@+id/phone"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/phone" />
            <EditText
                android:id="@+id/tel"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/gyeonggilight"
                android:hint="숫자만 입력하세요."
                android:padding="3dp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >
        <Button
            android:id="@+id/btnCancel"
            android:background="#fcd2f7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gyeonggi"
            android:onClick="onClick"
            android:textSize="18dp"
            android:text="취소" />
        <Button
            android:id="@+id/btnAdd"
            android:background="#fcb8f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gyeonggi"
            android:onClick="onClick"
            android:textSize="18dp"
            android:text="확인" />
    </LinearLayout>

</LinearLayout>